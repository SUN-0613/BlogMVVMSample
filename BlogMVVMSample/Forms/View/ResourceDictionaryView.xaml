        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ResourceDictionaryView" Height="150" Width="300">
    <Window.Resources>
        <!-- ResourceDictionaryの参照設定 -->
        <ResourceDictionary Source="/BlogMVVMSample;component/Forms/Languages/ja-JP/LanguageDictionary.xaml" />
    </Window.Resources>
    <Grid>
        <TextBlock Text="{StaticResource Message}" VerticalAlignment="Center" TextAlignment="Center" />
    </Grid>
</Window>
